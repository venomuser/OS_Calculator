<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OS_Calculator.MVVM.Popups.MemoryBlocksSizesPopup"
       xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui">
    <VerticalStackLayout BackgroundColor="Gold"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">
        <Label Text="RAM Blocks Sizes" FontSize="Large" FontFamily="Offside" />
        <!-- Entry Controls-->
       <VerticalStackLayout BindableLayout.ItemsSource="{Binding _memory.MemoryBlocks}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="Block Storage (MB):"/>
                        <Entry Text="{Binding _memory.BlockStorage}" WidthRequest="200"/>
                    </HorizontalStackLayout>
                    
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
        

        <Button Text="Result" WidthRequest="100" Clicked="ButtonResult_Clicked"/>
    </VerticalStackLayout>
        
</mct:Popup>
