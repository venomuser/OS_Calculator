<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OS_Calculator.MainPage"
             Title="OS Calculator">
    <StackLayout Orientation="Vertical"
                 Spacing="50"
                 Padding="3"
                 VerticalOptions="Center"
                 HorizontalOptions="Center"
                 FlowDirection="LeftToRight"
                 >

    <Entry Placeholder="Number of Processes" PlaceholderColor="Gray"
           x:Name="txtProcessNumber"
           Keyboard="Numeric"
           TextChanged="OnNumericEntryTextChanged"
           WidthRequest="300"
           />
        <Button 
            x:Name="btnCPUpage"
            Text="Next"
            WidthRequest="200"
            Clicked="btnCPUpage_Clicked" BackgroundColor="Red"/>
    </StackLayout>

</ContentPage>
